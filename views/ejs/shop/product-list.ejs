<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/navBar.ejs') %>
  <main class="container pt-3">
    <h1>我的產品</h1>
    <% if (prods.length > 0) { %>
    <div class="row m-auto">
      <% for (let item of prods) { %>
      <div class="col-12 col-sm-6 my-3">
        <div class="card w-100 col-12">
          <img src="<%= item.imgUrl%>" class="card-img-top" alt="<%= item.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= item.title%></h5>
            <p class="card-text"><%= item.description %></p>
            <p class="card-text">$<%= item.price %></p>
            <div class="row">
              <a href="/product-detail/<%= item.id %>" class="btn btn-secondary mr-2">產品詳情</a>
              <%- include('../includes/add-to-cart.ejs', {item}) %>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <% } else { %>
    <div class="alert alert-danger">暫無商品</div>
    <% } %>
  </main>
  <%- include('../includes/script.ejs') %>
</body>

</html>